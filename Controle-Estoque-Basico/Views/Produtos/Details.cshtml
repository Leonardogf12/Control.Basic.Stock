@model Controle_Estoque_Basico.ViewModels.ProdutosViewModel

@{
    ViewData["Title"] = "Detalhe do Produto";
}

<div class="content-wrapper">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-12">
                <div class="col-sm-12">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                </div>
            </div>
        </div>
    </section>

    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="row">              
                    <div class="col-md-12">
                        <div class="card card-secondary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="img" src="@Url.Content("~/Imagens/"+Model.Produto.ImagemProdutoModel)"  />
                                </div>

                                <h3 class="text text-center">@Html.DisplayFor(model => model.Produto.PRO_NOME)</h3>

                                <p class="text-muted text-center">@Html.DisplayFor(model => model.Produto.PRO_DESCRICAO)</p>

                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>@Html.DisplayNameFor(model => model.Produto.PRO_QUANTIDADE)</b> <a class="float-right">@Html.DisplayFor(model => model.Produto.PRO_QUANTIDADE)</a>
                                    </li>
                                     <li class="list-group-item">
                                        <b>@Html.DisplayNameFor(model => model.Produto.PRO_ESTOQUEMINIMO)</b> <a class="float-right">@Html.DisplayFor(model => model.Produto.PRO_ESTOQUEMINIMO)</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>@Html.DisplayNameFor(model => model.Produto.PRO_DATAENTRADA)</b> <a class="float-right">@Html.DisplayFor(model => model.Produto.PRO_DATAENTRADA)</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>@Html.DisplayNameFor(model => model.Produto.PRO_VALIDADE)</b> <a class="float-right">@Html.DisplayFor(model => model.Produto.PRO_VALIDADE)</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="row col-md-12 mt-3">
                                <div class="btn">
                                    <a asp-action="Index" class="btn bg-gradient-secondary">Voltar</a>
                                    <a asp-action="Edit" asp-route-id="@Model.Produto.PRO_ID" class="btn btn-outline-primary">Editar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    img {
      height:200px;
      width:auto;
      border-radius: 35px;
    }
</style>


