@model Controle_Estoque_Basico.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="content-wrapper">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-12">
                    <h1>Dashboard</h1>
                </div>
            </div>
            <div class="card bg-light">
                <div class="row col-md-12">
                    <div class="card-header mt-2">
                        <div class="btn-group">
                            <button onclick="FiltroHomeGeral()" class="btn bg-gradient-secondary">Filtro</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row m-auto" style="justify-content: end">
                            <p style="font-size:large; font-weight:bold">Período:&nbsp;&nbsp;</p>
                            <p style="font-size:large" id="dataDeFiltroInicial">@Model.DataDe.ToShortDateString()</p>
                            <p style="font-size:large">&nbsp; - &nbsp;</p>
                            <p style="font-size:large" id="dataAteFiltroInicial">@Model.DataAte.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
