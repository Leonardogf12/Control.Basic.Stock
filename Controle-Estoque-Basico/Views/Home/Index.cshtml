                    <input class="form-control" type="date" />
                    </div>
                    <div class="form-group col-md-12 pr-md-1 pt-3">
                    <a data-card-widget="collapse" class="btn bg-gradient-danger">Cancelar</a>
                    <input type="submit" value="Filtrar" class="btn btn-outline-primary" />
                    </div>
                    </div>
                </div>*@

            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">          
            <div class="row">

                @* QUANTIDADE DE PRODUTOS NO ESTOQUE - CARD 1*@
                <div class="col-lg-6 col-6">
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3 id="quantidadeProdutos"></h3>
                            <p>Produtos</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a asp-area="" asp-controller="Produtos" asp-action="Index" class="small-box-footer">Sobre <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                @* QUANTIDADE DE PRODUTOS NO ESTOQUE FIM *@          

                @* SAIDA DE PRODUTOS - CARD 2*@
                <div class="col-lg-6 col-6">
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3 id="quantidadeSaidaProdutos"></h3>
                            <p>Saída</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a asp-area="" asp-controller="SaidaProdutos" asp-action="Index" class="small-box-footer">Sobre<i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                @* SAIDA DE PRODUTOS FIM *@

                @* GRAFICO A VENCER - GRAF 1*@
                <div class="col-md-12">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Gráfico de Produtos a vencer</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="chart">
                                <canvas id="lineChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                        </div>

                    </div>
                </div>
                @* GRAFICO A VENCER FIM *@

            </div>
        </div>
    </section>
  
</div>


<script src="~/theme/plugins/jquery/jquery.min.js"></script>
<script src="~/ViewsJs/HomeJs/HomeJs.js"></script>

